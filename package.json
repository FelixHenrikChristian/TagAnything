{
  "name": "taganything",
  "version": "2.0.0",
  "description": "开源文件标签管理工具 - A modern file tagging application inspired by TagSpaces",
  "main": "dist/main/main.js",
  "homepage": "https://github.com/FelixChristian011226/TagAnything",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "webpack --mode production --config webpack.config.js",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p src/main/tsconfig.json --watch",
    "dev:renderer": "webpack serve --mode development --config webpack.config.js",
    "start": "electron dist/main/main.js",
    "package": "npm run build && electron-builder",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "file-manager",
    "tagging"
  ],
  "author": {
    "name": "FelixChristian",
    "url": "https://github.com/FelixChristian011226"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FelixChristian011226/TagAnything.git"
  },
  "bugs": {
    "url": "https://github.com/FelixChristian011226/TagAnything/issues"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@types/fluent-ffmpeg": "^2.1.27",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-ffprobe": "^3.0.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "thumbsupply": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.1.2",
    "electron-builder": "^24.6.4",
    "electron-debug": "^4.1.0",
    "electron-devtools-installer": "^4.0.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.felixchristian.taganything",
    "productName": "TagAnything",
    "copyright": "Copyright © 2024 FelixChristian",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/@ffmpeg-installer/**",
      "**/node_modules/@ffprobe-installer/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publisherName": "FelixChristian",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TagAnything"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.ico",
      "category": "Utility"
    }
  }
}